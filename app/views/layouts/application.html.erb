<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
   
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
    </head>
    <body>
    
    <div id="flex-content-container">
      <nav class="navbar navbar-inverse bg-inverse">
            <button class="navbar-toggler hidden-lg-up" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>  
            </button>
            <%= link_to 'Flixter', root_url, class: 'navbar-brand' %>
            <div class="collapse navbar-toggleable-md" id="navbarResponsive">
            <ul class="nav navbar-nav">
            <li class="nav-item">
            <%= link_to 'See All Courses', courses_path, class: 'nav-link' %>
            </li> 
            </ul>
            <ul class="nav navbar-nav float-lg-right">
            <% if user_signed_in? %>
            <li class="nav-item">
            <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
            </li>
            <li class="nav-item"><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
            <% else %>
            <li class="nav-item"><%= link_to 'Sign in', new_user_session_path %></li>
            <li class="nav-item"><%= link_to 'Sign up', new_user_registration_path %></li>
            <% end %>
          </ul>
        </div>
      </nav>
      <ul class="navbar-nav">
          <% if user_signed_in? %>
          <li class="nav-item">
          </li>
      <% else %>
          <li class="nav-item">
          </li>
      <% end %>
         </ul>
      <%= yield %>
      </div>
   <div id="footer">
    <div class="container">
    <div class="row">
      <div class="col-12 col-sm-3">
        <b>Teachers</b>
        <br />
        <%= link_to 'Teach a Course', new_instructor_course_path %>
        <br />
        <%= link_to 'My Dashboard', dashboard_path %>
      </div>
      <div class="col-12 col-sm-3">
        <b>About</b>
        <br />
        <%= link_to 'Team', '#' %>
        <br />
        <%= link_to 'Careers', '#' %>
        <br />
        <%= link_to 'Privacy Policy', privacy_path %>
      </div>
      <div class="col-12 col-sm-3">
        <b>Contact</b>
        <br />
        my@email.com
        <br />
        One Kendall Square
        <br />
        Cambridge MA, 02113
      </div>
      <div class="col-12 col-sm-3 social">
        <b>Social</b>
        <br />
        <br />
        <%= link_to 'http://github.com/maendeleoperry' do %>
    <span class="fa fa-github-square fa-2x social-button"></span>
  <% end %>
        <span class="fa fa-facebook-square fa-2x social-button"></span>
        <span class="fa fa-twitter-square fa-2x social-button"></span>
      </div>
    </div>
  </div>
  </div>
  <script src="https://vjs.zencdn.net/5.12.6/video.js"></script>
    <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
  </body>
</html>
